	<script></script>


	<section class="h-100 h-custom" style="">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col">
					<div class="card">
						<div class="card-body p-4">

							<div class="row">

								<div class="col-lg-7">
									<h5 class="mb-3">
										<a href="{{ path('produits_all') }}" class="text-body">
											<i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping</a>
									</h5>
									<hr>

									{# //// affichage dans le panier //// #}

									{% for data in dataPanier %}

										<div class="card col-8 mb-3">
											<div class="card-body">
												<div class="d-flex justify-content-between">
													<div class="d-flex flex-row align-items-center">
														<div>
															<img src="{{ asset('photoProduits/') ~ data.produit.photo}}" class="img-fluid rounded-3" alt="" style="width: 65px;">
														</div>
														<div class="ms-3">
															<h5>{{data.produit.titre}}</h5>
															<p class="small mb-0">taille :{{data.produit.taille}}</p>
															<p class="small mb-0">couleur :
																{{data.produit.couleur}}</p>
														</div>
													</div>
													<div class="d-flex flex-row align-items-center">
														<div style="width: 70px;">
															<h6 class="fw-normal mb-0">{{data.produit.prix}}€</h6>
														</div>
														<div style="width: 20px;">
															<h6 class="fw-normal mb-0">{{ data.quantite }}</h6>
														</div>
														<div style="width: 70px;">
															<h5 class="mb-0">{{data.produit.prix * data.quantite}}
																€</h5>
														</div>

														<a href="{{ path('panier_delete_produit', {id: data.produit.id}) }}" style="color: #cecece;">
															<i class="fas fa-trash-alt text-danger"></i>
														</a>
													</div>
												</div>
											</div>
										</div>

									{% endfor %}

								</div>

								<div class="col-md-5 h-100">

									<div class="card bg-warning text-black rounded-3">
										<div class="d-flex justify-content-between m-5 ">
											<p class="m-2">Total(TTC)</p>
											<p class="m-2">
												<strong>{{ total }}
													€</strong>
											</p>
										</div>

										<div class="text-center">
											<button type="button" class="btn btn-info btn-block btn-lg m-5">
												<div class="d-flex justify-content-between">
													<a href="{{ path('passer_commande') }}">
														<span>Commander
															<i class="fas fa-long-arrow-alt-right ms-2"></i>
														</span>
													</a>
												</div>
											</button>
										</div>

									</div>
								</div>

							</div>

						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>{# //========= Autre Modele de panier ==========// 
				
				
				<section class="h-100 h-custom" style=" ">

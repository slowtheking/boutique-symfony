{% extends "layout.html.twig" %}

{% block title %}
	{{ produit.titre }}
{% endblock %}

{# =============== FICHE PRODUIT ========= #}

{% block content %}
	<div class="row d-flex justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="row">
					<div class="col-md-6">
						<div class="images p-3">
							<div class="img-fluid p-4">
								<img id="main-image" src="{{ asset('photoProduits/' ~ produit.photo) }}" 
								height="100%" width="100%"/>
							</div>

						</div>
					</div>

					<div class="col-md-6">
						<div class="product p-4">
							<div class="d-flex justify-content-between align-items-center">
								<div class="d-flex align-items-center">
									<i class="fa fa-long-arrow-left"></i>
									<span class="ml-1">Back</span>
								</div>
								<i class="fa fa-shopping-cart text-muted"></i>
							</div>
							<div class="mt-4 mb-3">

								<h5 class="text-uppercase">{{ produit.titre }}</h5>

								<div class="price d-flex flex-row align-items-center">
									<span class="act-price">Prix :
										{{ produit.prix }} â‚¬
									</span>

								</div>
							</div>
						</div>
						
						<p class="about mt-2 m-3 col-md-11">Description :<br>
							{{ produit.description }}</p>
						<div class="sizes m-3 mt-5">
							<h6 class="text-uppercase">Taille :
								{{ produit.taille }}</h6>
							<h6 class="text-uppercase">Couleurs :
								{{ produit.couleur }}</h6>
							<h6 class="text-uppercase">En stock :
								{{ produit.stock }}</h6>
						</div>

						<div class="cart mt-2 m-3 align-items-center">
						<a href="{{ path("panier_add", {id: produit.id}) }}">
							<button class="btn btn-sm btn-danger text-uppercase mb-2 px-4">
							Ajouter au panier
							</button>
						</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
